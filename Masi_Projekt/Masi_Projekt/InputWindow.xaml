<Window x:Class="Masi_Projekt.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wprowadź dane" Height="250" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Border Margin="20" Padding="20" CornerRadius="10" BorderBrush="Gray" BorderThickness="1">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBox Width="200" Height="30" Margin="0,0,0,10" />
                <TextBox Width="200" Height="30" Margin="0,0,0,20" />

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Zatwierdź" Width="80" Margin="0,0,10,0" Click="Confirm_Click" />
                    <Button Content="Anuluj" Width="80" Click="Cancel_Click" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>