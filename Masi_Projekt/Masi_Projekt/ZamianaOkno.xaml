<Window x:Class="Masi_Projekt.ZamianaOkno"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zamień wartość" Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#FFF0F2F5"
        ResizeMode="NoResize">
    <Grid>
        <Border Margin="20" Padding="20" Background="White" CornerRadius="10" BorderBrush="#DDDDDD" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Którą wartość chcesz zamienić na sekwencję?" FontSize="16" FontWeight="Bold" Margin="0 0 0 20" />
                <ComboBox x:Name="ComboBoxOpcje" Width="200" Height="30" HorizontalAlignment="Center">
                    <ComboBoxItem Content="1" />
                    <ComboBoxItem Content="2" />
                    <ComboBoxItem Content="3" />
                </ComboBox>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Zatwierdź" Width="90" Margin="10" Click="Confirm_Click"/>
                    <Button Content="Anuluj" Width="90" Margin="10" Click="Cancel_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>