<Window x:Class="Masi_Projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="150" />
        </Grid.ColumnDefinitions>

        <!-- Główna przestrzeń robocza -->
        <Border Grid.Column="0" Background="White" Margin="10" CornerRadius="10" BorderBrush="Gray" BorderThickness="1"/>

        <!-- Panel boczny z przyciskami -->
        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Wpisz wartość" Width="120" Height="30" Margin="0,0,0,10" Click="InputButton_Click"/>
            <Button Content="Operacja sekwencjonowania" Width="120" Height="50" Margin="0,0,0,10"/>
            <Button Content="Operacja eliminowania" Width="120" Height="50"/>
        </StackPanel>
    </Grid>
</Window>