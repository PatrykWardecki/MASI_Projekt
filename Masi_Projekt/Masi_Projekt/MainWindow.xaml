<Window x:Class="Masi_Projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Masi Projekt" Height="500" Width="850"
        WindowStartupLocation="CenterScreen"
        Background="#FFF0F2F5">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="220" />
        </Grid.ColumnDefinitions>

        <!-- Główna przestrzeń robocza -->
        <Border Grid.Column="0"
                Background="White"
                CornerRadius="10"
                BorderBrush="#DDDDDD"
                BorderThickness="1"
                Padding="20"
                Margin="0,0,10,0"
                SnapsToDevicePixels="True">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Direction="270" Opacity="0.3"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Witamy w aplikacji Masi Projekt!"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#333333"
                           Margin="0 0 0 10" />
                <TextBlock Text="Wybierz jedną z operacji po prawej stronie, aby rozpocząć."
                           FontSize="14"
                           Foreground="#555555" />
            </StackPanel>
        </Border>

        <!-- Panel boczny -->
        <Border Grid.Column="1"
                Background="White"
                CornerRadius="10"
                BorderBrush="#DDDDDD"
                BorderThickness="1"
                Padding="20"
                SnapsToDevicePixels="True">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Direction="270" Opacity="0.3"/>
            </Border.Effect>
            <StackPanel VerticalAlignment="Top">
                <TextBlock Text="Opcje"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#333333"
                           Margin="0 0 0 10" />

                <Button Content="Wpisz wartość"
                        Width="160"
                        Height="35"
                        Click="InputButton_Click" />

                <Button Content="Operacja sekwencjonowania"
                        Width="160"
                        Height="40"
                        Click="InputButton_Click" 
                        Margin="0 10 0 0" />

                <Button Content="Operacja eliminowania"
                        Width="160"
                        Height="40"
                        Click="InputButton_Click" 
                        Margin="0 10 0 0" />

                <Separator Margin="0 15 0 15"/>

                <Button Content="Zmień motyw"
                        Width="160"
                        Height="35"
                        Click="SwitchTheme_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
